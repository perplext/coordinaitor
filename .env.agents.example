# AI Agents Configuration
# Copy this file to .env and configure with your actual API keys and settings

# =============================================================================
# AWS Agents Configuration
# =============================================================================

# AWS Credentials (required for Bedrock, Amazon Q, CodeWhisperer)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SESSION_TOKEN=your_aws_session_token_if_using_temporary_credentials
AWS_REGION=us-east-1

# Amazon Bedrock Configuration
# Models available: anthropic.claude-3-opus-20240229-v1:0, anthropic.claude-3-sonnet-20240229-v1:0, etc.
BEDROCK_DEFAULT_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_STREAM_ENABLED=false

# Amazon Q Business Configuration
AMAZON_Q_APPLICATION_ID=your_amazon_q_application_id
AMAZON_Q_INDEX_ID=your_amazon_q_index_id_optional

# Amazon CodeWhisperer Configuration
# Uses same AWS credentials as above
CODEWHISPERER_DEFAULT_LANGUAGE=javascript

# =============================================================================
# GitHub Copilot Configuration
# =============================================================================

# GitHub Personal Access Token with Copilot access
GITHUB_API_KEY=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# =============================================================================
# Cursor AI Configuration
# =============================================================================

# Cursor AI API Key
CURSOR_API_KEY=your_cursor_api_key

# =============================================================================
# Perplexity AI Configuration
# =============================================================================

# Perplexity AI API Key
PERPLEXITY_API_KEY=your_perplexity_api_key

# =============================================================================
# Existing Agents Configuration
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google Gemini
GOOGLE_API_KEY=your_google_api_key

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Agent Behavior Configuration
# =============================================================================

# Enable/disable specific agents
ENABLE_BEDROCK_AGENT=true
ENABLE_AMAZON_Q_AGENT=true
ENABLE_GITHUB_COPILOT_AGENT=true
ENABLE_CURSOR_AGENT=true
ENABLE_PERPLEXITY_AGENT=true
ENABLE_CODEWHISPERER_AGENT=true

# Global agent settings
AGENT_TIMEOUT_MS=300000
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY_MS=1000

# =============================================================================
# Cost Management
# =============================================================================

# Monthly budget limits (in USD)
MONTHLY_BUDGET_LIMIT=1000
BEDROCK_MONTHLY_LIMIT=300
AMAZON_Q_MONTHLY_LIMIT=200
GITHUB_COPILOT_MONTHLY_LIMIT=50
CURSOR_MONTHLY_LIMIT=100
PERPLEXITY_MONTHLY_LIMIT=100
CODEWHISPERER_MONTHLY_LIMIT=50

# Alert thresholds (percentage of budget)
BUDGET_WARNING_THRESHOLD=80
BUDGET_CRITICAL_THRESHOLD=95

# =============================================================================
# Security and Privacy
# =============================================================================

# Enable security scanning for all code-related tasks
ENABLE_SECURITY_SCANNING=true

# Data retention settings
AGENT_LOG_RETENTION_DAYS=30
CONVERSATION_HISTORY_RETENTION_DAYS=7

# Privacy settings
ANONYMIZE_LOGS=true
DISABLE_CONVERSATION_STORAGE=false

# =============================================================================
# Performance and Monitoring
# =============================================================================

# Enable performance monitoring
ENABLE_AGENT_METRICS=true
METRICS_COLLECTION_INTERVAL=60000

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
CIRCUIT_BREAKER_RETRY_TIMEOUT_MS=300000

# Rate limiting
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Development and Testing
# =============================================================================

# Enable debug logging
DEBUG_AGENT_REQUESTS=false
DEBUG_AGENT_RESPONSES=false

# Test mode (uses mock responses)
AGENT_TEST_MODE=false

# Development endpoints (for testing)
BEDROCK_MOCK_ENDPOINT=http://localhost:8001
AMAZON_Q_MOCK_ENDPOINT=http://localhost:8002
GITHUB_COPILOT_MOCK_ENDPOINT=http://localhost:8003
CURSOR_MOCK_ENDPOINT=http://localhost:8004
PERPLEXITY_MOCK_ENDPOINT=http://localhost:8005

# =============================================================================
# Integration Settings
# =============================================================================

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# External service integrations
ENABLE_ANALYTICS_INTEGRATION=true
ANALYTICS_SERVICE_URL=http://localhost:9000

# Database settings for agent data
AGENT_DATA_DATABASE_URL=postgresql://user:password@localhost:5432/coordinaitor_agents

# =============================================================================
# Advanced Configuration
# =============================================================================

# Custom model endpoints (for self-hosted models)
CUSTOM_MODEL_ENDPOINT=http://localhost:11434
CUSTOM_MODEL_API_KEY=your_custom_model_api_key

# Load balancing settings
ENABLE_AGENT_LOAD_BALANCING=true
LOAD_BALANCE_STRATEGY=round_robin  # Options: round_robin, least_loaded, cost_optimized

# Caching settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# Backup and failover
ENABLE_AGENT_FAILOVER=true
FAILOVER_TIMEOUT_MS=30000
BACKUP_AGENT_PRIORITY=claude-001,gemini-001,codex-001

# =============================================================================
# Experimental Features
# =============================================================================

# Enable experimental features (use with caution)
ENABLE_EXPERIMENTAL_FEATURES=false

# Multi-modal support (when available)
ENABLE_MULTIMODAL_SUPPORT=false

# Agent collaboration features
ENABLE_AGENT_COLLABORATION=true
MAX_COLLABORATION_AGENTS=3

# Auto-scaling
ENABLE_AGENT_AUTO_SCALING=false
AUTO_SCALE_MIN_AGENTS=1
AUTO_SCALE_MAX_AGENTS=10
AUTO_SCALE_TARGET_UTILIZATION=70